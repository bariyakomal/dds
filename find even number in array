#include <stdio.h>

int main() {
    int arr[] = {1, 2, 8, 9, 6};
    int size = sizeof(arr) / sizeof(arr[0]);
    int i;

    for (i = 0; i < size; i++) {
        if (arr[i] % 2 == 0) {
            printf("Even number found: %d\n", arr[i]);
            return 0; 
        }
    }

    printf("No even number found in the array.\n");
    return 0;
}
